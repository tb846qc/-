{
  "name": "gaming-system",
  "version": "1.0.0",
  "description": "FHEVM-based confidential gaming system with encrypted scores and privacy-preserving leaderboards",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify": "hardhat verify --network sepolia",
    "check-balance": "hardhat run scripts/check-balance.js --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "clean": "npx hardhat clean",
    "coverage": "npx hardhat coverage",
    "lint": "eslint . --ext .js,.sol",
    "lint:fix": "eslint . --ext .js,.sol --fix",
    "format": "prettier --write .",
    "verify": "npx hardhat verify",
    "size": "npx hardhat size-contracts",
    "gas": "npx hardhat test --reporter gas"
  },
  "keywords": [
    "fhevm",
    "gaming",
    "blockchain",
    "privacy",
    "confidential",
    "leaderboard",
    "scores",
    "achievements",
    "solidity",
    "ethereum"
  ],
  "author": "FHEVM Gaming Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "@openzeppelin/contracts": "^4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/gaming-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/gaming-system/issues"
  },
  "homepage": "https://github.com/your-org/gaming-system#readme"
}